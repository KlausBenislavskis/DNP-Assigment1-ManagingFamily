@inject Data.IFamiliesData FamiliesData
<div class="bg-white rounded-lg mr-1 p-2">
    <div class="p-2">
        <h1> Children</h1>
        <div class="flex justify-content-around align-items-center py-2">
            <div class="">
                <div>
                    <h2>@_children</h2>
                </div>
            </div>
            <div>
                <i class="oi oi-credit-card " style="color: green;width: 100px;height:100px; font-size: 100px">
                </i>
            </div>
        </div>
    </div>
</div>

@code {
    int _children;
    protected override async Task OnInitializedAsync()
    {
        _children = FamiliesData.GetAllChildren().Count;
    }
}