@inject Data.IFamiliesData FamiliesData
<div class="bg-white rounded-lg mr-1 p-2">
    <div class="p-2">
        <h1> Adults</h1>
        <div class="flex justify-content-around align-items-center py-2">
            <div class="">
                <div>
                    <h2>@_adults</h2>
                </div>
            </div>
            <div>
                <i class="oi oi-person " style="color: green;width: 100px;height:100px; font-size: 100px">
                </i>
            </div>
        </div>
    </div>
</div>


@code {
    int _adults;
    protected override async Task OnInitializedAsync()
    {
        _adults = FamiliesData.GetAllAdults().Count;
    }
}