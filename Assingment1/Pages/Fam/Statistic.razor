@page "/Fam/{Id:int}/Statistic"
@using Assingment1.Data
@using Assingment1.Models
@inject IFamiliesData FamiliesData
    <div class="d-flex flex-row w-full justify-around">
        <div class="col-5">
            <EyeColorChart Persons="Persons"></EyeColorChart>
        </div>
        <div class="col-5">
            <SexChart Persons="Persons"></SexChart>
        </div>
    </div>

@code {

    [Parameter]
    public int Id { get; set; }

    public IList<Person> Persons;
    [CascadingParameter]
    public FamilyDetailed Layout { get; set; }


    protected override async Task OnInitializedAsync()
    {
        Persons = new List<Person>();
        Layout.Id = Id;
        Persons = (await FamiliesData.GetFamily(Id.ToString())).GetPersons();
    }

}